@{
    ViewData["Title"] = "Добавить остановку";
}
@model Cities 
<div class="for_form">
    <form asp-action="AddCity" asp-controller="Home" asp-antiforgery="true" method="post" class="form">
        <div class="validation" asp-validation-summary="ModelOnly"></div>
        <h1 class="form__title">Добавление остановки</h1>

        <div class="form__group">
            <input asp-for="Name" type="text" class="form__input" placeholder=" ">
            <label class="form__label">Наименование</label>
            <span asp-validation-for="Name"></span>
        </div>

        <div class="form__group">
            <input asp-for="PlatformCount" type="number" class="form__input" placeholder=" ">
            <label class="form__label">Количество перронов</label>
            <span asp-validation-for="PlatformCount"></span>
        </div>

        <button type="submit" class="form__button">Добавить</button>
    </form>
</div>